<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android.support.v7.appcompat="http://schemas.android.com/apk/res-auto"
    tools:context=".RecActivity"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:scaleType="center"
    android:id="@+id/rootView"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66FFFFFF"
        android:id="@+id/toolbar"
        android.support.v7.appcompat:navigationIcon="@drawable/ic_toolbar"
        android.support.v7.appcompat:title="Shake"
        android.support.v7.appcompat:titleTextColor="#ffffff"
        android:layout_alignParentTop="true"
        tools:targetApi="lollipop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:minHeight="100dp"
            android:background="@drawable/action_layout"
            android:layout_alignStart="@+id/listButton1"
            android:layout_alignEnd="@+id/listButton1"
            android:id="@+id/action_layout1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/default_icon"
                android:id="@+id/image1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/recButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/button_normal"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="@string/record"
                android:textColor="#333333"
                android:textSize="20sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/selButton1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                tools:targetApi="lollipop"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mControl1"
                android:layout_alignTop="@+id/recButton1"
                android:layout_alignBottom="@+id/recButton1"
                android:layout_toEndOf="@+id/recButton1"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:visibility="gone">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/prev1"
                    android:background="@drawable/prev_button"
                    android:layout_alignTop="@+id/play1"
                    android:layout_toStartOf="@+id/play1"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/play1"
                    android:background="@drawable/play_button"
                    android:layout_toStartOf="@+id/next1"
                    android:layout_alignTop="@+id/next1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/next1"
                    android:background="@drawable/next_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="30dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:textAlignment="center"
            android:id="@+id/listButton1"
            android:text="@string/select_action"
            android:fontFamily="monospace"
            android:textAllCaps="false"
            android:layout_below="@+id/action_layout1"
            android:background="@drawable/list_button"
            android:spinnerMode="dialog"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:popupBackground="#00FFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/listButton1"
            android:layout_marginTop="50dp"
            android:minHeight="100dp"
            android:background="@drawable/action_layout"
            android:layout_alignStart="@+id/listButton1"
            android:layout_alignEnd="@+id/listButton1"
            android:id="@+id/action_layout2">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/default_icon"
                android:id="@+id/image2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/recButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/button_normal"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="@string/record"
                android:textColor="#333333"
                android:textSize="20sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/selButton2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                tools:targetApi="lollipop"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mControl2"
                android:layout_alignTop="@+id/recButton2"
                android:layout_alignBottom="@+id/recButton2"
                android:layout_toEndOf="@+id/recButton2"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:visibility="gone">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/prev2"
                    android:background="@drawable/prev_button"
                    android:layout_alignTop="@+id/play2"
                    android:layout_toStartOf="@+id/play2"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/play2"
                    android:background="@drawable/play_button"
                    android:layout_toStartOf="@+id/next2"
                    android:layout_alignTop="@+id/next2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/next2"
                    android:background="@drawable/next_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="30dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:textAlignment="center"
            android:id="@+id/listButton2"
            android:text="@string/select_action"
            android:fontFamily="monospace"
            android:textAllCaps="false"
            android:background="@drawable/list_button"
            android:spinnerMode="dialog"
            android:popupBackground="#00FFFFFF"
            android:layout_below="@+id/action_layout2"
            android:layout_alignStart="@+id/action_layout2"
            android:layout_alignEnd="@+id/action_layout2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listButton2"
            android:id="@+id/play_store"
            android:layout_centerHorizontal="true"
            android:background="@drawable/set_action_button"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_play_store"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textAlignment="viewStart"
            android:drawablePadding="8dp"
            android:text="@string/get_shake_pro"
            android:textAllCaps="false"
            android:layout_marginTop="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:visibility="gone"
        android:id="@+id/selectLayout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66FFFFFF"
            android.support.v7.appcompat:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            android.support.v7.appcompat:title="Select Action"
            android.support.v7.appcompat:titleTextColor="#ffffff"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:text="@string/disable"
            android:textAlignment="viewStart"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_disable"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button0"
            android:textAllCaps="false"
            android:layout_marginTop="59dp"
            android:layout_below="@+id/toolbar2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/run_installed_app"
            android:textAlignment="viewStart"
            android:minHeight="33dp"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_run_app"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button1"
            android:layout_below="@+id/button0"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:text="@string/flashlight_on_off"
            android:textAlignment="viewStart"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_flash"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button2"
            android:layout_below="@+id/button1"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:layout_centerHorizontal="true"
            android:text="@string/wifi_on_off"
            android:textAlignment="viewStart"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_wifi"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:text="@string/sound_on_off"
            android:textAlignment="viewStart"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_snd"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:text="@string/control_music_player"
            android:textAlignment="viewStart"
            android:drawableStart="@drawable/ic_music"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:fontFamily="monospace"
            android:background="@drawable/set_action_button"
            android:id="@+id/button5"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_below="@+id/button4"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="33dp"
            android:text="@string/record_sound"
            android:textAlignment="viewStart"
            android:fontFamily="monospace"
            android:drawableStart="@drawable/ic_rec"
            android:drawablePadding="8dp"
            android:paddingStart="60dp"
            android:background="@drawable/set_action_button"
            android:id="@+id/button6"
            android:layout_below="@+id/button5"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:visibility="gone"
        android:id="@+id/tutorialLayout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66FFFFFF"
            android.support.v7.appcompat:navigationIcon="@drawable/ic_info_white_24dp"
            android.support.v7.appcompat:title="How To Use"
            android.support.v7.appcompat:titleTextColor="#ffffff"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar3"/>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager"
            android:layout_below="@+id/toolbar3">
        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android.support.v7.appcompat:tabBackground="@drawable/tab_selector"
            android.support.v7.appcompat:tabIndicatorHeight="0dp"
            android:layout_alignTop="@+id/pager"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_but"
            android:id="@+id/skip_but"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/progressLayout"
        tools:targetApi="lollipop">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ring"
            android:contentDescription="@string/ring"/>


        <ProgressBar
            android:id="@+id/progressBar"
            android:indeterminate="true"
            style="?android:attr/progressBarStyle"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            tools:targetApi="lollipop"
            android:indeterminateDrawable="@drawable/progress_loading"
            android:indeterminateDuration="1500"
            android:clickable="false"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:indeterminate="true"
            style="?android:attr/progressBarStyle"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            tools:targetApi="lollipop"
            android:indeterminateDrawable="@drawable/progress_done"
            android:indeterminateDuration="1000"
            android:clickable="false"
            android:visibility="gone"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:background="@drawable/progress_button"
            android:clickable="true"
            tools:targetApi="lollipop"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace-smallcaps"
            android:text="@string/start"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            />
    </RelativeLayout>

    <RelativeLayout
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_record"/>

    </RelativeLayout>
</RelativeLayout>